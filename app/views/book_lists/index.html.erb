<p style="color: green"><%= notice %></p>

<% content_for :title, "Book lists" %>

<div class="container mt-5">
<div class="nav justify-content-between align-items-center">
   <h1>Book lists</h1>
   <%= link_to "Create new list", new_book_list_path , class: "btn btn-danger" %>
</div>

<table class="table">
   <thead>
      <tr>
          <th> Book name</th>
          <th> Options </th>
      </tr>

   </thead>

   <tbody>
      <% @book_lists.each do |book_list| %>
         <tr>
         <td>
            <%= book_list.title %>
         </td>     
         <td>
         <%= link_to "Open booklist", book_list, class: "btn btn-danger" %>
       </td>
         </tr>
          
       <% end %>
   </tbody>
</table>
</div>